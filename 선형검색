#include <stdio.h>
#include <stdlib.h>

int search(const int str[], int N, int A) {

	for (int i = 0; i < N; i++) {
		if (A == str[i]) return i;
	}

	return -1;
}

int main(void) {

	int N = 0, A = 0;

	printf("선형 검색\n");
	printf("요소 개수: ");

	scanf("%d", &N);

	printf("검색할 숫자: ");
	scanf("%d", &A);

	int* str = (int*)malloc(N * sizeof(int));

	printf("배열에 입력할 숫자: ");

	for (int i = 0; i < N; i++) {
		scanf("%d", &str[i]);
	}

	int check = search(str, N, A);

	if (check != -1) {
		printf("%d는 str[%d]에 있습니다\n", A, check);
	}
	else printf("%d은(는) 없습니다\n");

	return 0;
}
