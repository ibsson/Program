#include <stdio.h>

void select(int arr[], int n) {
	int i, j;
	int max;
	int temp;

	for (i = 0; i < n - 1; i++) {
		max = i;

		for (j = i + 1; j < n; j++) {
			if (arr[j] < arr[max]) {
				max = j;
			}
		}
		temp = arr[i];
		arr[i] = arr[max];
		arr[max] = temp;
	}
}
int main() {
	int arr[4] = { 3,4,2,1 };
	int i;

	select(arr, (int)(sizeof(arr) / sizeof(int)));

	for (i = 0; i < 4; i++) {
		printf("%d ", arr[i]);
	}
	printf("\n");
	return 0;
}
