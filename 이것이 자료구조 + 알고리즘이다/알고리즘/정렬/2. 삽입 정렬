#include <stdio.h>
#include <string.h>

void InsertionSort(int data[], int len) {

	int value = 0;

	for (int i = 0; i < len; i++) {
		if (data[i - 1] <= data[i]) continue;

		value = data[i];

		for (int j = 0; j < i; j++) {
			if (data[j] > value) {
				memmove(&data[j + 1], &data[j], sizeof(data[0]) * (i - j)); //메모리의 내용을 이동시키는 함수. 배열처럼 연속된 데이터를 단번에 이동시킬때 유용
				data[j] = value;                                            //ㄴ 1.옮겨갈 새로운 메모리의 주소, 2.원본 데이터 주소, 3.이동시킬 바이트 양
				break;
			}
		}
	}
}

int main(void) {

	int data[] = { 6, 4, 2, 3, 1, 5 };
	int len = sizeof(data) / sizeof(data[0]);

	InsertionSort(data, len);

	for (int i = 0; i < len; i++) {
		printf("%d ", data[i]);
	}

	printf("\n");

	return 0;
}
